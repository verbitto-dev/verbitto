{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules", "apps", "packages", "target", ".anchor", "programs"],
  "references": [{ "path": "apps/api" }, { "path": "packages/program" }]
}
