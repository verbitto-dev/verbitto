{
  "name": "verbitto",
  "version": "0.1.0",
  "private": true,
  "description": "Verbitto â€” Decentralized Task Escrow for AI Agents on Solana",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:api\"",
    "dev:api": "pnpm --filter @verbitto/api dev",
    "dev:web": "pnpm --filter @verbitto/web dev",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter @verbitto/web build",
    "build:api": "pnpm --filter @verbitto/api build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "biome check --write . && pnpm -r typecheck",
    "typecheck": "pnpm -r typecheck",
    "test": "node --env-file=.env --loader tsx --no-warnings ./node_modules/.bin/ts-mocha -p ./tests/tsconfig.json -t 1000000 tests/**/*.ts",
    "test:check": "tsx --env-file=.env scripts/check-test-wallet.ts",
    "test:balance": "tsx --env-file=.env scripts/check-test-wallets-balance.ts",
    "test:diagnose": "tsx --env-file=.env scripts/diagnose-test-env.ts",
    "reclaim:wallets": "tsx --env-file=.env scripts/reclaim-test-wallets.ts",
    "check:authority": "tsx --env-file=.env scripts/check-authority.ts",
    "verify:program": "tsx --env-file=.env scripts/verify-program-id.ts",
    "export:phantom": "tsx --env-file=.env scripts/export-to-phantom.ts",
    "test:api-client": "tsx --env-file=.env scripts/test-api-client.ts",
    "test:agent": "tsx --env-file=.env scripts/test-agent.ts",
    "test:create-task": "tsx --env-file=.env scripts/create-test-task.ts",
    "demo:agent": "./scripts/demo-agent-workflow.sh",
    "dev:signer": "node docker-signer/verbitto-signer.js",
    "test:agent-local": "./scripts/test-agent-local.sh",
    "setup:symlink": "./scripts/setup-symlink.sh",
    "deploy:check": "./scripts/verify-deployment.sh",
    "deploy:program": "tsx --env-file=.env scripts/check-program-deployment.ts",
    "deploy:init": "tsx --env-file=.env scripts/initialize-platform.ts",
    "deploy:status": "tsx --env-file=.env scripts/check-platform.ts",
    "verify:onchain": "tsx --env-file=.env scripts/verify-onchain.ts",
    "demo:local": "concurrently \"solana-test-validator\" \"pnpm dev:api\" \"pnpm dev:web\"",
    "demo:monitor": "watch -n 5 \"curl -s http://localhost:8787/api/v1/tasks | jq\"",
    "demo:logs": "solana logs Coxgjx4UMQZPRdDZT9CAdrvt4TMTyUKH79ziJiNFHk8S --url devnet"
  },
  "dependencies": {
    "@coral-xyz/anchor": "0.31.1",
    "@solana/web3.js": "^1.98.4",
    "bs58": "^6.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/bn.js": "^5.2.0",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.0",
    "bn.js": "^5.2.2",
    "chai": "^6.2.2",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.4",
    "mocha": "^11.7.5",
    "ts-mocha": "^11.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0"
  },
  "pnpm": {
    "overrides": {
      "axios": ">=1.13.5",
      "lodash": ">=4.17.23",
      "diff": ">=8.0.3"
    }
  }
}
