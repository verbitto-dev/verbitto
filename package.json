{
  "name": "verbitto",
  "version": "0.1.0",
  "private": true,
  "description": "Verbitto â€” Decentralized Task Escrow Platform on Solana",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @verbitto/web dev",
    "dev:api": "pnpm --filter @verbitto/api dev",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm dev:api\"",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter @verbitto/web build",
    "build:api": "pnpm --filter @verbitto/api build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "biome check --write . && pnpm -r typecheck",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm exec ts-mocha -p ./tests/tsconfig.json -t 1000000 tests/**/*.ts"
  },
  "dependencies": {
    "@coral-xyz/anchor": "0.31.1",
    "@solana/web3.js": "^1.98.4",
    "bs58": "^6.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/bn.js": "^5.2.0",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.0",
    "bn.js": "^5.2.2",
    "chai": "^6.2.2",
    "concurrently": "^9.2.1",
    "mocha": "^11.7.5",
    "ts-mocha": "^11.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0"
  }
}
