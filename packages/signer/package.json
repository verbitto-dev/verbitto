{
  "name": "@verbitto/signer",
  "version": "0.1.0",
  "description": "Verbitto signing proxy service for autonomous agents - enables AI agents to sign Solana transactions locally",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "verbitto-signer": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js start",
    "start:daemon": "node dist/index.js start",
    "start:fg": "node dist/index.js",
    "stop": "node dist/index.js stop",
    "restart": "node dist/index.js restart",
    "status": "node dist/index.js status",
    "logs": "tail -f signer.log",
    "logs:error": "tail -f signer.err.log",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist *.log *.pid"
  },
  "keywords": [
    "verbitto",
    "solana",
    "ai-agent",
    "transaction-signer",
    "web3",
    "blockchain",
    "cli"
  ],
  "author": "Verbitto Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/verbitto-dev/verbitto.git"
  },
  "bugs": {
    "url": "https://github.com/verbitto-dev/verbitto/issues"
  },
  "homepage": "https://github.com/verbitto-dev/verbitto#readme",
  "dependencies": {
    "express": "^4.18.2",
    "@solana/web3.js": "^1.87.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
