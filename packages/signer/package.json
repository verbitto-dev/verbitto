{
    "name": "@verbitto/signer",
    "version": "0.1.0",
    "description": "Verbitto signing proxy service for autonomous agents - enables AI agents to sign Solana transactions locally",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "verbitto-signer": "./dist/index.js"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsc",
        "dev": "tsx src/index.ts",
        "start": "node dist/index.js",
        "start:bg": "nohup node dist/index.js > signer.log 2>&1 &",
        "stop": "pkill -f 'dist/index.js'",
        "logs": "tail -f signer.log",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "keywords": [
        "verbitto",
        "solana",
        "ai-agent",
        "transaction-signer",
        "web3",
        "blockchain",
        "cli"
    ],
    "author": "Verbitto Team",
    "license": "Apache-2.0",
    "dependencies": {
        "express": "^4.18.2",
        "@solana/web3.js": "^1.87.6"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^22.0.0",
        "tsx": "^4.7.0",
        "typescript": "^5.7.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
